                    <div class="col-md-3">
                        <button id="searchButton" class="btn btn-primary">Search</button>
                    </div>
                    <div class="col-md-3">
                        <button id="addButton" class="btn btn-primary"><i class="bi bi-plus"></i>Add New User</button>
                    </div>
                </div>
            </div>

            <!-- Tab links -->
            <div class="tab">
                <button class="tablinks" onclick="openCity(event, 'Showtimes')">Showtimes</button>
                <button class="tablinks" onclick="openCity(event, 'Movies')">Movies</button>
            </div>

