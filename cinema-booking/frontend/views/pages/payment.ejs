<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Checkout</title>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
    integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css"/>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

  <link rel="stylesheet" href="/css/nav.css" />
  <link rel="stylesheet" href="/css/style.css" />
</head>

<body>
  <!-- Navbar -->
  <%- include('../partial/membernavbar.ejs', { loggedIn: loggedIn }) %>

    <main>

      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <h2>Payment Information</h2>
            <form>
              <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="useSavedCard">
                <label class="form-check-label" for="useSavedCard">Use saved credit card?</label>
                <!-- this section should only load if there is valid saved credit cards -->
                <!-- use getAllCreditCards? -->
              </div>
              <div class="form-group">
                <label for="cardNumber">Card Number</label>
                <input type="text" class="form-control" id="cardNumber" placeholder="Enter card number" disabled>
              </div>
              <div class="form-group">
                <label for="cardName">Name on Card</label>
                <input type="text" class="form-control" id="cardName" placeholder="Enter name on card" disabled>
              </div>
              <div class="form-group">
                <label for="expiryDate">Expiry Date</label>
                <input type="text" class="form-control" id="expiryDate" placeholder="MM/YY" disabled>
              </div>
              <div class="form-group">
                <label for="cvv">CVV</label>
                <input type="text" class="form-control" id="cvv" placeholder="Enter CVV" disabled>
              </div>
              <button type="submit" class="btn btn-primary">Submit Payment</button>
            </form>
          </div>
          <div class="col-md-6">
            <h2>Item Information</h2>
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Movie: <%- showtimeDetails.movieTitle %></h5>
                <p class="card-text">Cinema: <%- showtimeDetails.cinemaName %></p>
                <p class="card-text">Theater: <%- showtimeDetails.theaterId %></p>
                <p class="card-text">Date: <%- showtimeDetails.showDate %></p>
                <p class="card-text">Time: <%- showtimeDetails.showTime %></p>
                <p class="card-text">Seat Number: <%- JSON.stringify(seats) %></p>
                <p class="card-text">Price: $10.50</p>
              </div>
            </div>
          </div>
        </div>
      </div>

    </main>

    <!-- footer -->
    <%- include('../partial/footer'); %>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    <script src="/js/payment.js"></script>

</body>

</html>