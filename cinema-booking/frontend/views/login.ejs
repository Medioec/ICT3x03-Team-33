<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Login</title>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
    integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.20.0/jquery.validate.min.js'></script>
  <script src="https://cdn.jsdelivr.net/npm/dompurify@3.0.6/dist/purify.min.js"></script>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css"/>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">

  <link rel="stylesheet" href="/css/nav.css" />
  <link rel="stylesheet" href="/css/login.css">

</head>

<body>
  <%- include('./partial/navbar.ejs', { loggedIn: loggedIn }) %>

    <div class="wrapper">
      <div class="inner-warpper text-center">
        <h2 class="title">Login to your account</h2>
        <form action="" id="login-form">
          <div class="input-group">
            <label class="palceholder" for="userName" id="placeholderFix">Username</label>
            <input class="form-control" name="userName" id="userName" type="text" placeholder="" />
            <span class="lighting"></span>
          </div>

          <div class="input-group" id="passwordInputGroup">
            <label class="palceholder" for="userPassword" id="placeholderFix">Password</label>
            <span id="togglePassword" class="toggle-password">
              <i class="bi bi-eye"></i>
            </span>
            <input class="form-control" name="userPassword" id="userPassword" type="password" placeholder="" />
            <span class="lighting"></span>
          </div>

          <div class="recaptcha-error">
            <!-- using localhost sitekey, need to generate a new once deployed on server -->
            <div id="recaptcha" class="g-recaptcha" data-sitekey="6LcPUOAoAAAAAOU1Zy_KJVlo5Osn4EtA9eNT1sd1"
              data-callback="onSuccess" data-action="action"></div>
          </div>

          <button type="submit" id="login-button" disabled>Login</button>

          <div class="clearfix supporter">
            <a class="forgot" href="#">Forgot Password?</a>
          </div>
        </form>
        <p id="error-message"></p>
      </div>

      <div class="signup-wrapper text-center">
        <a href="/register">Don't have an account? <span class="text-primary">Create One</span></a>
      </div>

      <!-- <button type="submit" id="logout-button">Logout</button> -->
    </div>


    <%- include('./partial/footer'); %>


      <script src="https://www.google.com/recaptcha/api.js" async defer></script>

      <script src="/js/login.js"></script>
      <script src="/js/passwordtoggle.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.min.js"></script>

</body>

</html>